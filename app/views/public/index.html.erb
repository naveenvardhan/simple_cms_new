<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header d-flex">
        <span class="flex-grow-"><h3>Subjects</h3></span>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Visible</th>
            <th>Position</th>
            <th>Created at</th>
            <th>Updated at</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @subjects.each do |sub| %>
          <tr>
            <td><%= sub.id %></td>
            <td><%= sub.name %></td>
            <td>
              <%= get_visibility_status(sub.visible) %>
            </td>
            <td><%= sub.position %></td>
            <td><%= sub.created_at %></td>
            <td><%= sub.updated_at %></td>
            <td>
              <%= link_to 'Show',  public_path(sub) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
