<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header d-flex">
        <span class="flex-grow-1">Sections</span>
        <%= link_to 'Add New Section', new_section_path, class: 'btn btn-primary' %>
      </div>
      <table  class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Visible</th>
            <th>Content type</th>
            <th>Content</th>
            <th>Page ID</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @sections.each do |section| %>
            <tr>
              <td><%= section.name %></td>
              <td><%= section.position %></td>
              <td><%= section.visible %></td>
              <td><%= section.content_type %></td>
              <td><%= section.content %></td>
              <td><%= section.page.name %></td>
              <td><%= link_to 'Show', section %></td>
              <td><%= link_to 'Edit', edit_section_path(section) %></td>
              <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
