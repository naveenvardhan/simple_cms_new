<h1>Subjects</h1>
<%= link_to 'Add New Subject', new_subject_path,class:"btn btn-primary" %>
<table class="table">
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Visible</th>
    <th>Position</th>
    <th>Created at</th>
    <th>Updated at</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
    <% @subjects.each do |sub| %>
   <tr>
    <td><%= sub.id %></td>
    <td><%= sub.name %></td>
    <td><%= sub.visible %></td>
    <td><%= sub.position %></td>
      <td><%= sub.created_at %></td>
    <td><%= sub.updated_at %></td>
    <td>
      <%= link_to 'Show',  subject_path(sub) %>
      <%= link_to 'Edit', edit_subject_path(sub) %>
      <%= link_to 'Delete', subject_path(sub), method: :delete %>
    </td>
   </tr>
    <% end %>
  </tbody>
</table>
